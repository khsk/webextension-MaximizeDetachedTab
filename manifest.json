{
  "manifest_version": 2,
  "name": "Maximize Detached Tab",
  "version": "1.0",
  "description": "When detached a tab, To maximize the window",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon/switch.svg",
    "default_title": "Maximize Detached Tab : ON"
  }
}